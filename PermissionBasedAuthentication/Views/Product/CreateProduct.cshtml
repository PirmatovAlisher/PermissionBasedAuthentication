@model Product
@{
	ViewData["Title"] = "CreateProduct";
}

<h1>Create Product</h1>

<form asp-controller="Product" asp-action="CreateProduct" method="post" class="form-control">
	<div class="mb-3">
		<label asp-for="Name" class="form-label">Name</label>
		<input asp-for="Name" type="text" class="form-control" placeholder="Enter a name">
	</div>
	<div class="mb-3">
		<label asp-for="Quantity" class="form-label">Quantity</label>
		<input asp-for="Quantity" type="number" class="form-control" placeholder="Enter a Quantity">
	</div>
	<div class="mb-3">
		<label asp-for="Price" class="form-label">Price</label>
		<input asp-for="Price" type="number" class="form-control" placeholder="Enter a Price">
	</div>
	<div class="mb-3">
		<label asp-for="ProductFeature.Height" class="form-label">Height</label>
		<input asp-for="ProductFeature.Height" type="number" class="form-control" placeholder="Enter a Height">
	</div>
	<div class="mb-3">
		<label asp-for="ProductFeature.Weight" class="form-label">Weight</label>
		<input asp-for="ProductFeature.Weight" type="number" class="form-control" placeholder="Enter a Weight">
	</div>
	<div class="mb-3">
		<label asp-for="ProductFeature.Color" class="form-label">Color</label>
		<input asp-for="ProductFeature.Color" type="text" class="form-control" placeholder="Enter a Color">
	</div>
	<div class="mb-3">
		<label asp-for="CategoryId" class="form-label">Category</label>
		<select asp-for="CategoryId" asp-items="@(new SelectList(ViewBag.Categories,"Id","Name")) " class="form-select"></select>
	</div>
	<button class="btn btn-success">Submit</button>
</form>