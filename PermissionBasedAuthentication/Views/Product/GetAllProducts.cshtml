@model List<Product>
@{
	ViewData["Title"] = "GetAllProducts";
}

<h1>Products</h1>

<br>
<a class="btn btn-success" asp-controller="Product" asp-action="CreateProduct">Create Product</a>
<br>
<table class="table table-hover">
	<thead>
		<tr>
			<th scope="col">ID</th>
			<th scope="col">Product Name</th>
			<th scope="col">Quantity</th>
			<th scope="col">Price</th>
			<th scope="col">Category Name</th>
			<th scope="col">Height</th>
			<th scope="col">Weight</th>
			<th scope="col">Color</th>
			<th scope="col">Manipulations</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.Id</td>
				<td>@item.Name</td>
				<td>@item.Quantity</td>
				<td>@item.Price</td>
				<td>@item.Category.Name</td>
				<td>@item.ProductFeature.Height</td>
				<td>@item.ProductFeature.Weight</td>
				<td>@item.ProductFeature.Color</td>
				<td>
					<a class="btn btn-outline-secondary" asp-controller="Product" asp-action="UpdateProduct" asp-route-id="@item.Id">Edit</a>
					<a class="btn btn-outline-danger" asp-controller="Product" asp-action="DeleteProduct" asp-route-id="@item.Id">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>