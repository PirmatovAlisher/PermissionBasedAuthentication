@model List<UserListVM>
@{
	ViewData["Title"] = "UserList";
}

<h1>Users</h1>

<br>
<table class="table table-hover">
	<thead>
		<tr>
			<th scope="col">ID</th>
			<th scope="col">Full Name</th>
			<th scope="col">Email</th>
			<th scope="col">Remove User</th>
			<th scope="col">User Roles</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.Id</td>
				<td>@item.FullName</td>
				<td>@item.Email</td>
				<td>
					<a class="btn btn-warning" asp-controller="UserRole" asp-action="GetUserRoles" asp-route-userId="@item.Id">Roles</a>
				</td>
				<td>
					<a class="btn btn-danger" asp-controller="Admin" asp-action="RemoveUser" asp-route-id="@item.Id">Remove</a>
				</td>
			</tr>
		}
	</tbody>
</table>