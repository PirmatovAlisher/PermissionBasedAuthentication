@model RoleCreateVM
@{
	ViewData["Title"] = "CreateRole";
}

<h1>Create Role</h1>

<form asp-controller="Role" asp-action="CreateRole" method="post">
	<div class="mb-3">
		<label asp-for="RoleName" class="form-label">Name</label>
		<input asp-for="RoleName" type="text" class="form-control" placeholder="Enter a Role name">
	</div>
	<button class="btn btn-success">Submit</button>
</form>