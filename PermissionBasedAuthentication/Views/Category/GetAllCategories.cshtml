@model List<Category>
@{
	ViewData["Title"] = "GetAllCategories";
}

<h1>Categories</h1>
<br>
<a class="btn btn-success" asp-controller="Category" asp-action="CreateCategory">Create Category</a>
<br>
<table class="table table-hover">
	<thead>
		<tr>
			<th scope="col">ID</th>
			<th scope="col">Category Name</th>
			<th scope="col">Manipulations</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.Id</td>
				<td>@item.Name</td>
				<td>
					<a class="btn btn-outline-secondary" asp-controller="Category" asp-action="UpdateCategory" asp-route-id="@item.Id">Edit</a>
					<a class="btn btn-outline-danger" asp-controller="Category" asp-action="DeleteCategory" asp-route-id="@item.Id">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>