@model DomainListWithParamsVM
@{
	ViewData["Title"] = "GetAllDomainsByControllerNameId";
}

<h1>@Model.ControllerParams.ControllerName</h1>


<br>
<a class="btn btn-success" asp-controller="Domain" asp-action="AddDomainRoleToController"
   asp-route-controllerName="@Model.ControllerParams.ControllerName" asp-route-controllerId="@Model.ControllerParams.ControllerId">
	Add Domain Role
</a>
<br>
<table class="table table-hover">
	<thead>
		<tr>
			<th scope="col">Role Name</th>
			<th scope="col">Manipulations</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.DomainList)
		{
			<tr>
				<td>@item.Role.RoleName</td>
				<td>
					<a class="btn btn-warning" asp-controller="Domain" asp-action="UpdateDomainRoleForController"
					   asp-route-controllerName="@Model.ControllerParams.ControllerName" asp-route-id="@item.Id"
					   asp-route-controllerId="@Model.ControllerParams.ControllerId">Edit</a>

					<a class="btn btn-danger" asp-controller="Domain" asp-action="RemoveDomainRoleFromController"
					   asp-route-controllerName="@Model.ControllerParams.ControllerName" asp-route-id="@item.Id"
					   asp-route-controllerId="@Model.ControllerParams.ControllerId">Remove</a>
				</td>
			</tr>
		}
	</tbody>
</table>

<a asp-controller="ControllerName" asp-action="GetAllControllerList" class="btn btn-warning">Back</a>