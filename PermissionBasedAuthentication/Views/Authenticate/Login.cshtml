@model LoginVM
@{
	ViewData["Title"] = "Login";

}
<h1>Login</h1>


<form method="post" asp-controller="Authenticate" asp-action="Login" class="form-control">
	@if (ViewBag.Error != null)
	{
		<div class="alert alert-danger" role="alert">
			@ViewBag.Error
		</div>
	}

	<div class="mb-3">
		<label asp-for="Email" class="form-label">Email</label>
		<input asp-for="Email" type="email" class="form-control" placeholder="Enter Email">
	</div>
	<div class="mb-3">
		<label asp-for="Password" class="form-label">Password</label>
		<input asp-for="Password" type="password" class="form-control" placeholder="Enter Password">
	</div>
	<br />
	<button class="btn btn-success">Submit</button>
	<br />
	<br />
	<a asp-action="Register" asp-controller="Authenticate">Register as a new user</a>
	<br />
</form>